<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_32323C"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_32323C"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_btn_white">

            <com.ms.tjgf.mvp.news.widget.ClearEditText
                android:id="@+id/filter_edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ems="10"
                android:singleLine="true"
                android:textColor="@color/color_696969"
                android:textColorHint="@color/color_696969"
                android:textSize="12sp" />

            <TextView
                style="@style/text_12_696969"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="5dp"
                android:text="搜索" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/fistfriend_add_btn"
            style="@style/imageview_wrap_content_center"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/icon_fistfriend_add" />
    </LinearLayout>

    <View style="@style/line_123232A" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/fistfriend_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="@null" />

        <TextView
            android:id="@+id/dialog_tv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@color/cc_dark_fade"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:visibility="invisible" />

        <com.ms.tjgf.mvp.news.widget.SideBar
            android:id="@+id/sidrbar"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center" />
    </FrameLayout>
</LinearLayout>
