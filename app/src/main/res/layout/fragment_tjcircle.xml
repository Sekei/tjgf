<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/app_theme_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="太极圈"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </RelativeLayout>

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tjcircle_xtablayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:xTabDividerWidthWidthText="true"
        app:xTabIndicatorColor="#f00"
        app:xTabIndicatorHeight="3dp"
        app:xTabMode="scrollable"
        app:xTabSelectedTextColor="#f00"
        app:xTabSelectedTextSize="16sp"
        app:xTabTextColor="#000"
        app:xTabTextSize="15sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tjcircle_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
