<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/indicator_line01"
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@color/color_6D6D78" />

        <TextView
            android:id="@+id/indicator_title"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/bg_rect_ffbe1a"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <View
            android:id="@+id/indicator_line02"
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@color/color_6D6D78" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="21dp"
        android:background="@drawable/btn_rect_43_434351">

        <TextView
            android:id="@+id/study_name"
            style="@style/text_16_EAEAEA"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text="请选择系列" />
    </RelativeLayout>
</LinearLayout>
