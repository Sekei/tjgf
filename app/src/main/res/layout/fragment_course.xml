<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_32323C"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_EAEAEA"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bg_rect_50_23232a"
            android:drawableRight="@drawable/icon_up"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="日期"
            android:textSize="14sp" />

        <TextView
            style="@style/text_EAEAEA"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rect_50_23232a"
            android:drawableRight="@drawable/icon_up"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="派系"
            android:textSize="14sp" />

        <TextView
            style="@style/text_EAEAEA"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rect_50_23232a"
            android:drawableRight="@drawable/icon_up"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="状态"
            android:textSize="14sp" />

        <TextView
            style="@style/text_EAEAEA"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rect_50_23232a"
            android:drawableRight="@drawable/icon_up"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="教练"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/line_1_23232A" />


    <ListView
        android:id="@+id/my_course_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="#00000000"
        android:scrollbars="none" />
</LinearLayout>