<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/line_1_23232A" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="27dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/indicator_title"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/bg_rect_ffbe1a"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="17sp" />

                    <View
                        android:id="@+id/indicator_line"
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="11dp"
                        android:background="@color/color_6D6D78" />

                </LinearLayout>


                <TextView
                    android:id="@+id/study_name"
                    style="@style/text_16_EAEAEA"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="21dp"
                    android:background="@drawable/btn_rect_43_434351"
                    android:gravity="center_vertical"
                    android:paddingLeft="17dp"
                    android:text="请选择系列" />


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="28dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0px"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    android:background="@drawable/tjgf_bg" />
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="192dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/app_theme_rect_50_bg"
                android:text="查看详情"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
