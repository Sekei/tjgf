<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/line_1_23232A" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/icon_tricks" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_rect_43_434351">

                    <TextView
                        style="@style/text_16_EAEAEA"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="国家普及推广套路" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/icon_zhaoshi" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_rect_43_434351">

                    <TextView
                        style="@style/text_16_EAEAEA"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="老架式" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/icon_coach" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_rect_43_434351">

                    <TextView
                        style="@style/text_16_EAEAEA"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="刘建辉" />
                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="28dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0px"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    android:background="@drawable/tjgf_bg" />
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="192dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/app_theme_rect_50_bg"
                android:text="查看详情"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
