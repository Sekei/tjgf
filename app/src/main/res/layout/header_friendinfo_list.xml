<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_32323C">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:background="@color/color_32323C">

        <ImageView
            android:id="@+id/friend_top_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY" />


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/my_user_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/user_img"
            app:riv_border_color="@color/colorWhite"
            app:riv_border_width="5dp"
            app:riv_oval="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/friend_name"
                    style="@style/text_20_FFFFFF"
                    android:text="张三丰" />

                <Button
                    style="@style/text_15_FFFFFF"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/btn_rect_5_f04354"
                    android:text="添加" />
            </RelativeLayout>

            <TextView
                style="@style/text_14_FFFFFF"
                android:text="上海·浦东 | 陈氏太极" />

            <TextView
                style="@style/text_11_939393"
                android:layout_marginTop="7dp"
                android:text="我们继续奋力向前，逆水行舟，被不断地向后推，直至回到往…" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
