<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_black_head" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/mycourse_xtab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_32323C"
        app:xTabIndicatorColor="@color/color_F95251"
        app:xTabIndicatorHeight="3dp"
        app:xTabIndicatorWidth="15dp"
        app:xTabSelectedTextColor="@color/color_EAEAEA"
        app:xTabSelectedTextSize="17sp"
        app:xTabTextColor="@color/color_888888"
        app:xTabTextSize="14sp" />

    <View style="@style/line_1_23232A" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mycourse_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
