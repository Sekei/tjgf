<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <com.ms.tjgf.mvp.friendinfo.utils.CompatToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <include layout="@layout/include_black_head" />
    </com.ms.tjgf.mvp.friendinfo.utils.CompatToolbar>

    <EditText
        android:id="@+id/username"
        style="@style/lodin_editext"
        android:layout_height="53dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="100dp"
        android:hint="请输入手机号码"
        android:inputType="phone" />

    <EditText
        android:id="@+id/login_pwd"
        style="@style/lodin_editext"
        android:layout_height="53dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp"
        android:hint="请输入登录密码"
        android:inputType="textPassword"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/code_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_code"
            style="@style/lodin_editext"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:hint="请输入验证码" />

        <Button
            android:id="@+id/authcode"
            style="@style/text_FFFFFF"
            android:layout_width="94dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_rect_5_f04354"
            android:text="获取验证码"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_code_pwd"
            style="@style/text_FFFFFF"
            android:layout_weight="1"
            android:text="@string/login_pwd"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/forgetpwd"
            style="@style/text_FFFFFF"
            android:text="@string/forgetpwd"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/login"
        style="@style/text_FFFFFF"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/app_theme_4_bg"
        android:text="@string/login"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/register"
        style="@style/text_FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:text="创建账号"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                style="@style/text_FFFFFF"
                android:text="绑定后意味着同意太极功夫的"
                android:textSize="10sp" />

            <TextView
                style="@style/text_FFFFFF"
                android:text="《使用协议》"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/colorWhite" />

            <TextView
                style="@style/text_FFFFFF"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="其他登陆"
                android:textSize="14sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/colorWhite" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_weixi" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_qq" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_wb" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
