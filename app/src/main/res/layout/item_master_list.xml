<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_32323C">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/tjgf_bg" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/master_name"
            style="@style/text_FFFFFF"
            android:layout_marginTop="8dp"
            android:text="刘建斌大师-浦东大讲堂"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/master_timer"
            style="@style/text_FFFFFF"
            android:layout_below="@+id/master_name"
            android:layout_marginTop="5dp"
            android:text="2017-01-01  15:00"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/master_loaction"
            style="@style/text_FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:text="浦东新区鄂尔多斯艾力大厦"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>
