<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_24242D"
    android:focusable="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_24242D"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_rect_50_32323c">

            <com.ms.tjgf.mvp.news.widget.ClearEditText
                android:id="@+id/filter_edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ems="10"
                android:singleLine="true"
                android:textColor="@color/color_696969"
                android:textColorHint="@color/color_696969"
                android:textSize="12sp" />

            <TextView
                style="@style/text_12_696969"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="5dp"
                android:text="搜索" />
        </RelativeLayout>

        <com.ms.tjgf.widget.CustomGridView
            android:id="@+id/video_gird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="10dp" />

    </LinearLayout>
</ScrollView>