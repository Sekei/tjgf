<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_24242D"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@drawable/ranking_teacher_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="10"
        android:background="@drawable/bg_rect_4_32323c"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_EAEAEA"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="排名"
                android:textSize="17sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_424242E" />

            <TextView
                style="@style/text_EAEAEA"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="昵称"
                android:textSize="17sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_424242E" />

            <TextView
                style="@style/text_EAEAEA"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="武协段位"
                android:textSize="17sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_424242E" />

            <TextView
                style="@style/text_EAEAEA"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="积分"
                android:textSize="17sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_424242E" />


        <ListView
            android:id="@+id/ranking_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:listSelector="#00000000"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_EAEAEA"
            android:layout_weight="1"
            android:text="您当前排名：99"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/btn_group"
            style="@style/text_EAEAEA"
            android:drawableLeft="@drawable/icon_group"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="斗士榜"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>
